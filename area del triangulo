using namespace std;
void main()
{
	float base;
	float altura;
	float area;
	cout<< "ingresa la base del triangulo: "<<endl;
	cin>>base;
	cout<< "ingrese la altura del triangulo: ";
	cin>>altura;
	area=(base*altura)/2;
	cout<< "el area del triangulo es: "<<area;

	cin.ignore();
	cin.get();
	getch();

}
